const mongoose =require("mongoose");

const userSchema =new mongoose.Schema({

name:{
    type:String,
    required:true,
    trim:true

},
email: {
    type: String,
    required: true,
    unique: true,
    lowercase: true
  },

  password: {
    type: String,
    required: true,
    minLen: 8,
    maxLen: 15
  },

},{timestamps:true})
module.exports = mongoose.model('foruser',userSchema)